# Solana Configuration
NEXT_PUBLIC_SOLANA_RPC_ENDPOINT=https://api.mainnet-beta.solana.com
NEXT_PUBLIC_SOLANA_NETWORK=mainnet-beta

# Alternative RPC endpoints for better performance
# NEXT_PUBLIC_SOLANA_RPC_ENDPOINT=https://solana-api.projectserum.com
# NEXT_PUBLIC_SOLANA_RPC_ENDPOINT=https://rpc.ankr.com/solana

# Solana Beach API Configuration
NEXT_PUBLIC_SOLANA_BEACH_API_KEY=your-api-key-here
NEXT_PUBLIC_SOLANA_BEACH_API_URL=https://api.solanabeach.io/v1

# Optional: Custom RPC endpoints for different environments
NEXT_PUBLIC_SOLANA_RPC_ENDPOINT_MAINNET=https://api.mainnet-beta.solana.com
NEXT_PUBLIC_SOLANA_RPC_ENDPOINT_TESTNET=https://api.testnet.solana.com
NEXT_PUBLIC_SOLANA_RPC_ENDPOINT_DEVNET=https://api.devnet.solana.com

# Analytics (optional)
# NEXT_PUBLIC_GA_ID=your-google-analytics-id

# Sentry for error tracking (optional)
# SENTRY_DSN=your-sentry-dsn

# Recent Blocks (server-side)
# Cache TTL for /api/recent-blocks
# RECENT_BLOCKS_CACHE_TTL_MS=800

# Geyser gRPC integration (recommended long-term)
# ENABLE_GEYSER_RECENT_BLOCKS=true
# GEYSER_GRPC_URL=https://your-geyser-grpc-endpoint:443
# GEYSER_GRPC_TOKEN=your-token-if-required